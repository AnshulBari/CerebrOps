[flake8]
max-line-length = 127
max-complexity = 15
exclude = 
    venv,
    build,
    dist,
    __pycache__,
    .git,
    .pytest_cache,
    logs,
    elk

# Ignore some common warnings
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (in __init__.py files)

per-file-ignores =
    __init__.py:F401
    tests/*:F401